<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/color_ff6f84a3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="取消"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:textSize="18dp"
            android:id="@+id/tvConsumeCancel"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="完成"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textSize="18dp"
            android:id="@+id/tvConsumeOK"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/activity_vertical_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center|left"
                    android:src="@drawable/addto"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="选择账本"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:textSize="18dp"/>
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerRecordBook">

                </Spinner>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center|left"
                    android:src="@drawable/addto"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="消费金额：  "
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:inputType="number"
                    android:digits="0123456789."
                    android:maxLines="1"
                    android:id="@+id/etSumOfMoney"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center|left"
                    android:src="@drawable/addto"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="选择类别"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:textSize="18dp"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerRecordCategory">

                </Spinner>
            </LinearLayout>
            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="消费日期：  "
                android:layout_marginLeft="30dp"
                android:maxLines="1"
                android:id="@+id/etRecodeDate"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center|left"
                    android:src="@drawable/addto"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="选择计算方式"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:textSize="18dp"/>
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerRecordConsumeType"></Spinner>
            </LinearLayout>
            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="消费人：  "
                android:layout_marginLeft="30dp"
                android:maxLines="1"
                android:editable="false"
                android:id="@+id/etRecodeConsumer"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入消费心得或备注"
                android:layout_marginTop="10dp"
                android:id="@+id/etConsumeNote"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
